{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    //absolute import
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@entities/*": [
        "entities/*"
      ],
      "@features/*": [
        "features/*"
      ],
      "@widgets/*": [
        "widgets/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@app/*": [
        "app/*"
      ]
    }
  },
  "include": [
    "src",
    "./jest.setup.ts"
  ]
}